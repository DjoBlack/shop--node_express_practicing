<body>

<%- include('../includes/nav.ejs') %>
    <main>
        <% if(products.length > 0) {%>
            <ul>
                <% products.forEach(p => { %>
                    
                        <li>
                            <p><%= p.title %> (x <%= p.quantity %>)</p>
                            <form action="/cart-remove-item" method="POST">
                                <button class="btn" type="submit">Remove Item</button>
                                <input type="hidden" value="<%= p._id %>" name="productId">
                            </form>
                        </li>                  
                <% }) %>
            </ul>
        <% } else { %>
            <h2>No products in the cart yet!</h2>
        <% } %>
    </main>
<%- include('../includes/bottom.ejs') %>