</head>
<body>
    <%- include('../includes/nav.ejs') %> 

    <main>
        <% if(orders.length <= 0) { %>
            <h2>You don't have orders yet!</h2>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                <li>
                    <h2>Order #<%= order._id %></h2>
                    <ul>
                        <% order.products.forEach(p => { %>
                        <li>
                            <p><%= p.productData.title %></p> (x <%= p.quantity %>)
                        </li>
                        <% }); %>
                    </ul>
                </li>
                <% }); %>
            </ul>
        <% }; %>
    </main>
</body>
